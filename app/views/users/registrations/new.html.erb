<div class="device-new-form">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
        <p class='error'><%= show_errors(@user, :email) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <p class='error'><%= show_errors(@user, :password) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <p class='error'><%= show_errors(@user, :password_confirmation) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label "Username" %><br />
        <%= f.text_field :username %>
        <p class='error'><%= show_errors(@user, :username) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label "firstname" %><br />
        <%= f.text_field :firstname %>
        <p class='error'><%= show_errors(@user, :firstname) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label "lastname" %><br />
        <%= f.text_field :lastname %>
        <p class='error'><%= show_errors(@user, :lastname) %></p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-6">
        <%= f.label "Phone number" %><br />
        <%= f.text_field :phone_number %>
        <p class='error'><%= show_errors(@user, :phone_number) %></p>
      </div>
    </div>

    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit "Sign up", :class=>"btn btn-primary" %>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= render "users/shared/links" %>
      </div>
    </div>
  <% end %>
</div>